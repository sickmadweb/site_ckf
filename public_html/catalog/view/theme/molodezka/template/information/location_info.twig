{{ header }}
<div id="information-contact" class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  <h1>{{ heading_title }}</h1>
</div>
	<div id="content" class="container">
	    
	    <img src="{{ image }}" class="img-location">
	    
	    <div class="row contacts-block">
		    <div class="col-sm-8 ">
		    	
		    	
		    
			{% if contacts  %}
				{% for contact in contacts %}
					<a href="tel:+{{ contact.href_phone }}"><i class="fa fa-phone"></i>{{ contact.phone }}</a>
					<a href="https://wa.me/{{ contact.href_phone }}" >
					<img style="height: 20px;" src="/image/catalog/logo/WhatsApp.png">
					</a>
					<a   href="viber://chat?number=%2B{{ contact.href_phone }}">
						<img style="height: 20px;" src="/image/catalog/logo/viber.png">
					</a>
					<br>
					
				{% endfor %}
				<a href="mailto:{{ contacts[0].email }}"><i class="fa fa-mail"></i>{{ contacts[0].email }}</a>
				
			{% else  %} 
				<strong>{{ text_telephone }}</strong><br>
				{{ location.telephone }}<br />
				<br />
			{% endif %} 
			<address>{{ address }}</address>
			</div>
			
		    <div class="col-sm-4  forms-block">
		    {{ callback }}	
		    </div>
		</div>
		<p>{{ comment }}</p>
		
		
		
		{% if images  %}
			{% for image in images %}
			
			<img src="{{ image }}" class=" col-xs-6">
			
			{% endfor %}
		{% endif %}
		
		{{ maps }}

		
		
	</div>


{{ footer }}
